git clone https://github.com/tomac/yersinia /opt/yersinia  
cd /opt/yersinia   
apt install autoconf libgtk-3-dev libnet-dev libgtk2.0-dev
sudo apt-get -y install pcapfix   
apt-get install libpcap-dev   
./autogen.sh   
 make && make install 
./configure    
sudo yersinia -G   
# Enjoy Yersinia In Graphical modes
